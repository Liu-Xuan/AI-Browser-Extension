{
  "manifest_version": 3,
  "name": "AI Browser Assistant",
  "version": "1.0.0",
  "description": "An AI-powered browser assistant with temporary knowledge base management",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_title": "AI Browser Assistant",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://172.19.12.146:8888/*",
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "core/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core/content-script.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "core/*",
        "ui/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 